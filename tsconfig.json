{
  "compilerOptions": {
    "allowJs": true,                                 
    "esModuleInterop": true,                            
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,     
    "declarationMap": true,      
    "moduleResolution": "node",     
    "importHelpers": true,                                    
    "target": "es2021", 
    "types": ["node"],
    "paths": {
      "@handlersMs/": ["./src/*"]
    },                                              
  },
  "include": ["src/*.ts", "src/trash/app.ts", "src/trash/messageHandler.ts"],
  "exclude": ["**/*.spec.ts", "**/*test.ts", "node_modules"]
}
